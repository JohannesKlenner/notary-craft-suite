modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "libiconv", "rustc"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Run Backend"

[[workflows.workflow]]
name = "Run Backend"
author = 41538878
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python backend/main.py"

[[ports]]
localPort = 8080
externalPort = 80
